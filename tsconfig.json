{
  "compilerOptions": {
    "lib":["es2021"],
    "target": "es2016",  
    "moduleResolution": "node",                               
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./build",
    "esModuleInterop": true,   
    "baseUrl": "./src",
    "paths": {
      "@/*":["*"]
    },                                                
    "forceConsistentCasingInFileNames": true,       
    "strict": true,                                                      
    "skipLibCheck": true                             
},
"include": ["src/**/*"],
"exclude": ["node_modules","build"]
}